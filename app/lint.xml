<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <!-- Disable obsolete SDK suppression -->
    <issue id="OldTargetApi" severity="ignore" />

    <!-- Composable naming enforced by convention, not lint -->
    <issue id="ComposableNaming" severity="ignore" />

    <!-- Allow string literals in Compose previews -->
